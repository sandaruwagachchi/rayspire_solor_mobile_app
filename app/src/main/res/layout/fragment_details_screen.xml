<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fragment Title -->
    <TextView
        android:id="@+id/text_fragment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is Details Screen Fragment"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Product Name -->
    <TextView
        android:id="@+id/text_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="12.8V 100AH 200AH 300AH Series Lithium Battery"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_fragment_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Product Image -->
    <ImageView
        android:id="@+id/image_product"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/battery"
        app:layout_constraintTop_toBottomOf="@id/text_product_name"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Scrollable Product Description -->
    <ScrollView
        android:id="@+id/scroll_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:descendantFocusability="blocksDescendants"
        app:layout_constraintTop_toBottomOf="@id/image_product"
        app:layout_constraintBottom_toTopOf="@id/buttondetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">



    <TextView
            android:id="@+id/text_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Brand: Zandon
